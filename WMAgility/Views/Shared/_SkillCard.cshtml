@model WMAgility.Models.Skill


<div class="col-lg-4 col-md-6 pb-4 filter @Model.Dog.DogName">
    <!-- Card-->
    <div class="card bg-white rounded shadow-sm" style="border:1px solid #222">
        <div class="card-body px-3 pt-3 pb-1 row">
            <div class="col-7"><label class="float-left">@Model.Description</label></div>
            <div class="col-5"><label class="float-right"><span class="text-info h3">@Model.Name</span></label> </div>
        </div>
        <img class="card-img-top img-fluid d-block mx-auto mb-3" src="@WebConstants.ImagePath@Model.Image" alt="Card image cap">
        <div class="card-body p-1 px-3 row">
            <div class="col-12 p-1">
                <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-dark form-control btn-sm p-2" style="height:40px">View Skill</a>
            </div>
        </div>
    </div>
</div>
