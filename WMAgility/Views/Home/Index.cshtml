@model WMAgility.Models.ViewModels.HomeViewModel

<div class="container">
    <div class="row">
        @foreach (var skill in Model.Skills)
        {
            //display all skills
            <partial name="_SkillCard" model="skill" />
        }
    </div>
</div>

@section Scripts{
    <script>
        $(document).ready(function(){

            $(".filter-button").click(function () {

                var value = $(this).attr('data-filter');
                if (value == "all") {
                    $('.filter').show('1000');
                }
                else {
                    $(".filter").not('.' + value).hide('3000');
                    $('.filter').filter('.' + value).show('3000');

                }
            });

});
    </script>

}