@model WMAgility.Models.Practice

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Edit</h1>

<h4>Practice</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="PracticeID" />
            <div class="form-group">
                <label asp-for="Date" class="control-label"></label>
                <input asp-for="Date" class="form-control" />
                <span asp-validation-for="Date" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Rounds" class="control-label"></label>
                <input asp-for="Rounds" class="form-control" />
                <span asp-validation-for="Rounds" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Fails" class="control-label"></label>
                <input asp-for="Fails" class="form-control" />
                <span asp-validation-for="Fails" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Notes" class="control-label"></label>
                <input asp-for="Notes" class="form-control" />
                <span asp-validation-for="Notes" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CanineId" class="control-label"></label>
                <select asp-for="CanineId" class="form-control" asp-items="ViewBag.CanineId"></select>
                <span asp-validation-for="CanineId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

